<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.fongwama.madede"
        versionCode = "13"
        version     = "1.0" >

    <!-- versionCode is optional and Android only. It must be an integer -->


    <name>Madede</name>

    <description>
        Madede est une application mobile de pr√©sentation de la culture du haricot made in Congo et de la valorisation des producteurs de haricot
    </description>

    <author href="http://www.fongwama.com" email="mbote@Fongwama.com">
        Fongwama
    </author>

    <!-- build only for android -->
    <platform name="android" />

    <!-- icon -->
    <icon src="img/logo.png" />


    <!-- no permission required -->
    <preference name="permissions" value="none" />

    <!-- plugin for whitelist url / protocols -->
    <plugin name="cordova-plugin-whitelist" />
    <!-- Allow links to web pages to open in a browser -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />


    <!-- access to external links -->
    <access origin="*" browserOnly="true"/>
    <!-- allow phone number dialing from app -->
    <access origin="tel:*" launch-external="yes" />

    <preference name="fullscreen" value="false" />



    <preference name="stay-in-webview" value="false"/>

</widget>
